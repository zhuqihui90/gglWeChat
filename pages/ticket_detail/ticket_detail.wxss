.swiper-item{
  display: block;
}
.slide-image {
  width: 100%;
}
swiper {
  width: 100%;
}
.goods_title {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #535353;
  padding: 20rpx;
  height: 80rpx;
  padding-right: 160rpx;
  position: relative;
}
.goods_infor_top {
  background-color: #FFF;
}
.goods_price {
  padding: 20rpx;
  font-size: 32rpx;
  color: #FF0000;
}
.goods_old_price {
  margin-left: 20rpx;
  font-size: 24rpx;
  text-decoration: line-through;
  color: #535353;
}
.goods_deliver {
  padding: 20rpx;
  border-top: 2rpx solid #E5E5E5;
  font-size: 20rpx;
  color: #676767;
}
.goods_collect_btn {
  height: 80rpx;
  width: 140rpx;
  position: absolute;
  right: 0;
  top: 20rpx;
  border-left: 2rpx solid #E5E5E5;
  text-align: center;
  font-size: 24rpx;
  line-height: 28rpx;
}
.goods_collect_img {
  width: 48rpx;
  height: 48rpx;
}
.goods_infor_pre {
  margin-top: 20rpx;
  background-color: #FFF;
  padding: 20rpx;
  min-height: 80rpx;
}
.goods_infor_txt {
  position: relative;
  padding-left: 100rpx;
  font-size: 26rpx;
  line-height: 36rpx;
}
.goods_infor_brand {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  /*background-image: url(../../image/brand.png);*/
  background-image: url("https://www.volvocars.com/static/images/volvo-logo-scaled.png");
  background-size: 80rpx 80rpx;
  background-repeat: no-repeat;
  background-position: center;
  left: 0rpx;
  top: 20rpx;
}
.goods_infor_raw {
  margin-top: 20rpx;
  background-color: #FFF;
  padding: 20rpx;
}
.goods_infor_item {
  font-size: 26rpx;
  line-height: 36rpx; 
}
.goods_infor_item text  {
  display: inline-block;
  width: 180rpx;
}
.goods_detail {
  padding: 0 20rpx;
  margin-top: 20rpx;
  background-color: #FFF;
}
.goods_detail_title {
  padding: 20rpx 0;
  font-size: 28rpx;
}
.goods_bottom {
  height: 100rpx;
}
.goods_bottom_btn {
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 100rpx;
  z-index: 99;
  background-color: #FFF;
  border-top: 2rpx solid #E5E5E5;
}
.goods_one {
  width: 25%;
  float: left;
  height: 100rpx;
}
.goods_half_half {
  width: 25%;
  float: left;
  height: 100rpx;
  font-size: 24rpx;
  line-height: 100rpx;
  text-align: center;
  color: #FFF;
}
.goods_half {
  width: 50%;
  float: left;
  height: 100rpx;
  font-size: 24rpx;
  line-height: 100rpx;
  text-align: center;
  color: #FFF;
}
.yellow {
  background-color: #FFA500;
}
.green {
  background-color: #69C3AA;
}
.blue {
  background-color: #00aaef;
}
.goods_car_num {
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  font-size: 20rpx;
  /*background-image: url(../../image/car1.png);*/
  background-image: url("https://www.volvocars.com/static/images/volvo-logo-scaled.png");
  background-size: 52rpx;
  background-position: center;
  background-repeat: no-repeat;
  position: relative;
}
.goods_car_num span {
  position: absolute;
  right: -10rpx;
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  border-radius: 28rpx;
  background-color: #FF0000;
  color: #FFF;
  text-align: center;
  line-height: 28rpx;
}

.content{
    border-top:2rpx solid #E5E5E5;
    margin:0;
    padding:20rpx 10rpx;
}
.content_title{
    font-size:30rpx;
    font-weight:bold;
}
.li{
    font-size: 24rpx;
}